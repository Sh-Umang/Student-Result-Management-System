@model StudentResultManagementSystem.Models.Result

@{
    ViewData["Title"] = "Home Page";
}

<!DOCTYPE html>
<html>
<head>
    <title>@ViewData["Title"]</title>
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body style="background-image: url(assets/background_homePage.jpeg); background-size: cover;">
    <div class="container">
        <div class="row justify-content-center mt-5">
            <div class="col-md-6 bg-light p-4 rounded">
                <h1 class="text-center text-primary">Board Examination Results</h1>
                <hr/>
                <form asp-action="Index">
                    <p class="text-danger">@ViewBag.ErrorMsg</p>
                    <div class="form-group">
                        <label asp-for="std_id"><strong>Symbol No:</strong></label>
                        <input asp-for="std_id" class="form-control" />
                        <span asp-validation-for="std_id" class="text-danger"></span><br />
                        <label for="DOB"><strong>DOB:</strong></label>
                        <input type="date" name="DOB" class="form-control mb-1 col-md-4" />
                        <span class="text-danger">@ViewBag.ErrorMesg</span>
                        
                        <input type="hidden" asp-for="sub_id" class="form-control" value="CSC999" />
                    </div>
                    <div class="form-group text-center">
                        <button type="submit" class="btn btn-primary">Search</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>

