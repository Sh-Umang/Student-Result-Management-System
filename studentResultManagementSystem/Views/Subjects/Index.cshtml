@model IEnumerable<StudentResultManagementSystem.Models.Subject>


<div class="container">
    <h1 class="text-center text-primary">Subjects</h1>

    <p>
        <a asp-action="Create" class="btn btn-primary">Add Subject</a>
    </p>

    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(model => model.subject_name)</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.subject_name)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.subject_id" class="btn btn-primary">Edit</a>
                        <a asp-action="Details" asp-route-id="@item.subject_id" class="btn btn-info">Details</a>
                        <a asp-action="Delete" asp-route-id="@item.subject_id" class="btn btn-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
