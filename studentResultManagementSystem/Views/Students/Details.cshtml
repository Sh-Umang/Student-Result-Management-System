@model StudentResultManagementSystem.Models.Student

<h1 class="text-primary text-center">Student Details</h1>
<hr />
<div class="col-md-6">
    <table class="table table-striped table-bordered">
        <tr>
            <th>Symbol No:</th>
            <td>@Html.DisplayFor(model => model.symbol_no)</td>
        </tr>
        <tr>
            <th>First Name:</th>
            <td>@Html.DisplayFor(model => model.first_name)</td>
        </tr>
        <tr>
            <th>Last Name:</th>
            <td>@Html.DisplayFor(model => model.last_name)</td>
        </tr>
        <tr>
            <th>Email:</th>
            <td>@Html.DisplayFor(model => model.email)</td>
        </tr>
        <tr>
            <th>Address:</th>
            <td>@Html.DisplayFor(model => model.address)</td>
        </tr>
        <tr>
            <th>Phone No:</th>
            <td>@Html.DisplayFor(model => model.phone_no)</td>
        </tr>
        <tr>
            <th>Gender:</th>
            <td>@Html.DisplayFor(model => model.gender)</td>
        </tr>
        <tr>
            <th>DOB:</th>
            <td>@Html.DisplayFor(model => model.DOB)</td>
        </tr>
    </table>
</div>

<div>
    <a asp-action="Edit" asp-route-id="@Model?.symbol_no" class="btn btn-primary">Edit</a> |
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>
