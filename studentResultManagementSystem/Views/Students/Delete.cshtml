@model StudentResultManagementSystem.Models.Student

@{
    ViewData["Title"] = "Delete";
}

<h1 class="text-primary">Delete</h1>
<hr />
<h3 class="text-danger">Are you sure you want to delete this?</h3>
<div class="col-md-6">
    <h4>Student Infomation:</h4>
    <table class="table table-striped table-bordered">
        <tr>
            <th>Symbol No:</th>
            <td>@Html.DisplayFor(model => model.symbol_no)</td>
        </tr>
        <tr>
            <th>First Name:</th>
            <td>@Html.DisplayFor(model => model.first_name)</td>
        </tr>
        <tr>
            <th>Last Name:</th>
            <td>@Html.DisplayFor(model => model.last_name)</td>
        </tr>
        <tr>
            <th>Email:</th>
            <td>@Html.DisplayFor(model => model.email)</td>
        </tr>
        <tr>
            <th>Address:</th>
            <td>@Html.DisplayFor(model => model.address)</td>
        </tr>
        <tr>
            <th>Phone No:</th>
            <td>@Html.DisplayFor(model => model.phone_no)</td>
        </tr>
        <tr>
            <th>Gender:</th>
            <td>@Html.DisplayFor(model => model.gender)</td>
        </tr>
    </table>

    
    <form asp-action="Delete">
        <input type="hidden" asp-for="symbol_no" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </form>
</div>
