@model StudentResultManagementSystem.Models.Student

<h1 class="text-primary text-center">Create</h1>

<h4>Student Information:</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        @if (ViewBag.ErrorMsg != "")
        {
            <p class="text-danger"><strong>@ViewBag.ErrorMsg</strong></p>
        }
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="symbol_no" class="control-label"></label>
                <input asp-for="symbol_no" class="form-control" />
                <span asp-validation-for="symbol_no" class="text-danger"></span>
                @*@if(ViewBag.ErrorMsg == 1){<p class="text-danger">Symbol Number already exists</p>}*@
            </div>
            <div class="form-group mt-1">
                <label asp-for="first_name" class="control-label"></label>
                <input asp-for="first_name" class="form-control" />
                <span asp-validation-for="first_name" class="text-danger"></span>
            </div>
            <div class="form-group mt-1">
                <label asp-for="last_name" class="control-label"></label>
                <input asp-for="last_name" class="form-control" />
                <span asp-validation-for="last_name" class="text-danger"></span>
            </div>
            <div class="form-group mt-1">
                <label asp-for="email" class="control-label"></label>
                <input asp-for="email" class="form-control" />
                <span asp-validation-for="email" class="text-danger"></span>
                @*@if(ViewBag.ErrorMsg == 2){<p class="text-danger">Email Address already taken</p>}*@
            </div>
            <div class="form-group mt-1">
                <label asp-for="address" class="control-label"></label>
                <input asp-for="address" class="form-control" />
                <span asp-validation-for="address" class="text-danger"></span>
            </div>
            <div class="form-group mt-1">
                <label asp-for="phone_no" class="control-label"></label>
                <input type="text" asp-for="phone_no" class="form-control" />
                <span asp-validation-for="phone_no" class="text-danger"></span>
            </div>
            <div class="form-group mt-1">
                <label asp-for="gender" class="control-label"></label>
                <select asp-for="gender" class="form-control">
                    <option value="Male">Male</option>
                    <option value="Female">Female</option>
                </select>
                <span asp-validation-for="gender" class="text-danger"></span>
            </div>
            <div class="form-group mt-1">
                <label asp-for="DOB"></label>
                <input type="date" asp-for="DOB" class="form-control" />
                <span asp-validation-for="DOB" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <input type="submit" value="Create" class="btn btn-primary" /> |
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
