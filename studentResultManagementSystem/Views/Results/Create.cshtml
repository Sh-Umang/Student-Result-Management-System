@model StudentResultManagementSystem.Models.Result

<h1 class="text-primary">Create</h1>

<h4>Result</h4>
<hr />
@if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
{
    <div class="alert alert-danger alert-dismissible ">
        <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
        <strong>Error!</strong> The record with the following IDs already exists.
    </div>
}
<div>
    <div class="row">
        <form asp-action="Create">
            <div class="col-md-4">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="std_id" class="control-label">Student ID:</label>
                    <input type="hidden" asp-for="std_id" class="form-control" value="@ViewBag.id2" readonly />
                    <input type="text" class="form-control" value="@ViewBag.std_id3" readonly />
                </div>
                <div class="form-group">
                    <label asp-for="sub_id" class="control-label">Subject ID:</label>
                    <select asp-for="sub_id" class="form-control" asp-items="@ViewBag.sub_id"></select>
                </div>
            </div>
            <div class="col-md-4">
                <div class="form-group">
                    <label asp-for="theory_marks" class="control-label">Theory Marks:</label>
                    <input asp-for="theory_marks" class="form-control" />
                    <span asp-validation-for="theory_marks" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="assignment_marks" class="control-label">Assignment Marks:</label>
                    <input asp-for="assignment_marks" class="form-control" />
                    <span asp-validation-for="assignment_marks" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="practical_marks" class="control-label">Practical Marks:</label>
                    <input asp-for="practical_marks" class="form-control" />
                    <span asp-validation-for="practical_marks" class="text-danger"></span>
                </div>
            </div>
           
            <div class="form-group mt-3">
                <input type="submit" value="Create" class="btn btn-primary" /> |
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
            </div>

        </form>
    </div>
</div>

<div>
    
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
